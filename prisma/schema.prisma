datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model GiftItem {
  id          String    @id @default(uuid())
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
  name        String
  price       String?
  notes       String?
  recipient   User      @relation(fields: [recipientId], references: [id])
  recipientId String
  link        String?
  purchased   Boolean   @default(false)
  groups      Group[]
}

model User {
  id        String     @id @default(uuid())
  createdAt DateTime?  @default(now())
  updatedAt DateTime?  @updatedAt
  name      String     @unique
  password  String
  items     GiftItem[]
  groups    Group[]
}

enum Group {
  BENJAMINS
  HAUGEN
}
